void
seek_next_audio_struct(struct rom *rom)
{
	int test;

	rom.seek_cur(32);
	test = 0;
	while (test == 0)
	{
		rom.seek_cur(16);
		
		rom.seek_cur(12);
		/*checks if the next line is an envelope*/
		if (rom.read16() == 0xFFFF)
		{
			if (rom.read16() == 0x0000)
			{
				test = 1;
			}
			rom.seek_cur(-2);
		}
		rom.seek_cur(2);
		/*checks if next line is a new structure*/
		if (rom.read32() == 0x02)
		{
			if (rom.read32() == 0x02)
			{
				test = 1;
			}
			rom.seek_cur(-4);
		}
		rom.seek_cur(-4);
	}
	rom.seek_cur(-16);
}

